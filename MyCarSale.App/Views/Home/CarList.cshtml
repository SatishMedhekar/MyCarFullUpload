@model MyCarsale.Client.CarCollection

@{
    ViewBag.Title = "CarList";
}

<h2>CarList</h2>

<div>

    <div class="container" style="margin-top:50px;" background-color:white;">
        <div class="row">
            @foreach (var c in Model.cars)
            {

                <div id="tab-container" style="background-color:white; border:solid;">
                    <div class="well">
                        <div class="row">
                           
                             <div class="col-md-4">
                                <img src="@Url.Content("~/Images/Image1.JPG")" alt="Demo" class="img-rounded img-responsive">
                                <h3>
                                    Very versatile car
                                </h3>
                            </div>


                            <div class="col-md-6">
                                <div>
                                    <strong> @c.CarSepcificInfo.CarMake.MakeType</strong>
                                </div>

                                <span class="lead"> Description</span>
                            </div>
                            

                            <div class="col-md-2">
                                <div class="input-group pull-right">
                                    <span class="glyphicon glyphicon-comment input-group-addon"></span>
                                </div>
                            </div>
                        </div>
                    </div>
               </div>

            }
        </div>
    </div>
</div>

       