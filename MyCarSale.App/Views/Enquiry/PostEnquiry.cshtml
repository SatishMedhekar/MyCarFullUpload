@using (Html.BeginForm("PostEnquiry", "Enquiry", FormMethod.Post))
{
    <div class="panel panel-default" style="background-color:#e6f2ff">
        <div class="panel-heading" style="background-color:#6699ff">
            Enquire on this car
        </div>
        @Html.HiddenFor(x => x.CarId);
            <div id="update-message" class="has-error invisible"></div>
            <div class="panel-body" style="padding:10px;">
                <div class="form-group">
                    @Html.Hidden("id", "", new { @class = "hiddenid" })

                    @Html.LabelFor(m => m.CustomerDetail.CustomerName.FName, new { @class = "sr-only" })
                    @Html.TextBoxFor(m => m.CustomerDetail.CustomerName.FName, new { @class = "form-control", placeholder = "Enter your First Name" })
                    @Html.ValidationMessageFor(m => m.CustomerDetail.CustomerName.FName)
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerDetail.CustomerName.LName, new { @class = "sr-only" })
                    @Html.TextBoxFor(m => m.CustomerDetail.CustomerName.LName, new { @class = "form-control", placeholder = "Enter your Last Name" })
                    @Html.ValidationMessageFor(m => m.CustomerDetail.CustomerName.LName)
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerDetail.CustomerName.Email, new { @class = "sr-only" })
                    @Html.TextBoxFor(m => m.CustomerDetail.CustomerName.Email, new { @class = "form-control", placeholder = "Enter your Email" })
                    @Html.ValidationMessageFor(m => m.CustomerDetail.CustomerName.Email)
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.CustomerDetail.CustomerName.PhoneInfo.Mobile, new { @class = "sr-only" })
                    @Html.TextBoxFor(m => m.CustomerDetail.CustomerName.PhoneInfo.Mobile, new { @class = "form-control", placeholder = "Enter your Telephone" })
                    @Html.ValidationMessageFor(m => m.CustomerDetail.CustomerName.PhoneInfo.Mobile)
                </div>
                <br />
                <div class="form-group">
                    @Html.LabelFor(m => m.Comment, new { @class = "sr-only" })
                    @Html.TextAreaFor(m => m.Comment, new { @class = "form-control", placeholder = "Enter your Comment" })
                    @Html.ValidationMessageFor(m => m.Comment)
                </div>
            
                <br />

                <div class="form-group">
                    @*<input type="submit" value="Submit" id="submit" class="btn btn-default" />*@
                    <button type="submit" id="submit1" class="btn btn-sm">Submit Enquiry</button>
                </div>
            </div>
